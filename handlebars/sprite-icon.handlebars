@import "mixin/flexible";
.sprite{
	display:inline-block;
	background-repeat:no-repeat;
}
{{#sprites}}
	.icon-sprite-{{name}}{
		.sprite;
		background-image:url({{escaped_image}});
		.pxToRemTwo(background-size,{{px.total_width}},{{px.total_height}});
		.pxToRemTwo(background-position,{{px.offset_x}},{{px.offset_y}});
		.pxToRem(width,{{px.width}});
		.pxToRem(height,{{px.height}});
	}
{{/sprites}}
